pipeline {
    agent any
    
    stages {
        stage('Checkout') {
            steps {
                // Checkout the source code from your version control system
               sh '''
                checkout scm
                '''
            }
        }
        
        stage('Build') {
            steps {
                // Install dependencies and build your application
                sh 'npm install'
            
            }
        }
        
        stage('Test') {
            steps {
                // Run tests
                sh 'npm test'
            }
        }
        
        stage('Deploy') {
            steps {
                // Deploy your application
                sh 'npm deploy'
            }
        }
    }
}
